{
    "ts-node": {
        "compilerOptions": {
            "module": "commonjs"
        }
    },
    "compilerOptions": {
        "moduleResolution": "node",
        "target": "ES2016",
        "module": "commonjs",
        "lib": ["DOM", "ES2016", "DOM.iterable", "ES2020.Intl" ],
        "jsx": "react",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "declaration": true,
        "strict": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        //"noUnusedParameters": true,
        "strictNullChecks": true,
        "importHelpers": true,
        "resolveJsonModule": true,
        "preserveConstEnums": true,
        "removeComments": false,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist"
    },
    "files": [
        "src/js/index.ts",
        "src/js/analyse.ts",
        "src/js/configure.ts",
        "src/js/play.ts",
        "src/js/watch.ts",
    ]
}